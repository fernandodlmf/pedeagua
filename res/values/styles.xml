<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
        
        	
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
         <item name="android:fontFamily">open-sans</item>
         <item name="android:textColor">#666666</item>            
         <item name="android:icon">@android:color/transparent</item>
    </style>
    
    
    
   <style name="vendedorRating" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_vendedor</item>
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">open-sans</item>
        <item name="android:textColor">#666666</item>       
   </style>
   
   
   <style name="vendedorRatingFinal" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_vendedor_qua</item>
        <item name="android:minHeight">45dip</item>
        <item name="android:maxHeight">45dip</item>
        <item name="android:focusable">false</item>
        <item name="android:fontFamily">open-sans</item>
        <item name="android:textColor">#666666</item>       
   </style>
   
   
   
   <style name="vendedorRatingSmall" parent="@android:style/Widget.DeviceDefault.Light.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/rating_vendedor</item>
	    <item name="android:minHeight">30dip</item>
	    <item name="android:maxHeight">30dip</item>
	    <item name="android:fontFamily">open-sans</item>
        <item name="android:textColor">#666666</item>       
   </style>
    
    
</resources>
