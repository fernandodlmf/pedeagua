<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        <RelativeLayout
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content"
			 android:background="#FFFFFF">
	 
		    <RelativeLayout
		        android:id="@+id/layoutHrConfirmar"
		        android:layout_width="match_parent"
		        android:layout_height="90dp"
		        android:orientation="horizontal" >
		        
		         <TextView
		            android:id="@+id/tvFecharEndereco"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_alignTop="@+id/imageView1"
		            android:layout_marginRight="10dp"
		            android:clickable="true"
		            android:onClick="tvFechar"
		            android:text="@string/fechar"
		            android:textColor="#000000"
		            android:textSize="15pt"
		            android:textStyle="bold" />
		
		        
		
		        <ImageView
		            android:id="@+id/imageView1"
		            android:layout_width="wrap_content"
		            android:layout_height="68dp"
		            android:layout_marginLeft="5dp"
		            android:layout_marginTop="10dp"
		            android:src="@drawable/gota" />
		       
		        
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_centerVertical="true"
		            android:text="ENDEREÇO"
		            android:textColor="#666666"
		            android:textSize="12pt"
		            android:textStyle="bold"/>
		    </RelativeLayout>
		        
	         <LinearLayout
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="0dp"
	             android:layout_below="@+id/layoutHrConfirmar"   >
			    
	             	<View 
					   android:layout_width="match_parent"
					   android:layout_height="2dp"
					   android:background="#A9A9A9"/>
	             
	             
	         </LinearLayout>
		         
		         

			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_below="@+id/layoutHrConfirmar" >
			    
			    
			    
			    	<EditText
			            android:id="@+id/etRua"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="15dp"
			            android:inputType="textPostalAddress"
			            android:hint="RUA/AV." />
			
			        <EditText
			            android:id="@+id/etBairro"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:inputType="textPostalAddress"
			            android:hint="BAIRRO" />
			        
			        <LinearLayout
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:orientation="horizontal" >
			
						<EditText
						    android:id="@+id/etCep"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginTop="10dp"
						    android:layout_weight="0.7"
						    android:hint="CEP"
						    android:inputType="number" />
						
						<EditText
						    android:id="@+id/etNumero"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:layout_marginTop="10dp"
						    android:layout_weight="0.4"
						    android:hint="NÚMERO"
						    android:inputType="number" />
		
					</LinearLayout>
					
			        <EditText
			            android:id="@+id/etComplemento"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:inputType="textPostalAddress"
			            android:hint="COMPLEMENTO" />
			        
			        <EditText
			            android:id="@+id/etCidade"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:inputType="textPostalAddress"
			            android:hint="CIDADE" />
					
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_horizontal" >
				
				</LinearLayout>		
				        
			     <LinearLayout
			        android:id="@+id/layout_Termos"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="20dp" >
			
			        <Button
			            android:id="@+id/btConfirmar_Cadastro"
			            android:layout_width="match_parent"
			            android:layout_height="55dp"
			            android:background="@drawable/btn_confirmar_cadastro"
			            android:onClick="cadastrar"
			            android:text="@string/confirmar"
			            android:textColor="#FFFFFF"
			            android:textSize="10pt"
			            android:textStyle="bold"
			            android:fontFamily="open-sans" />
			
			     </LinearLayout>
			    
			 
			</LinearLayout>
		
		</RelativeLayout>
	
    </LinearLayout>

</ScrollView>