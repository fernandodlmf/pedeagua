<ScrollView 
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
        	<RelativeLayout
				 android:layout_width="match_parent"
				 android:layout_height="wrap_content"
				 android:background="#FFFFFF"
				 android:fontFamily="open-sans">
	 
		    <RelativeLayout
		        android:id="@+id/layoutHrConfirmar"
		        android:layout_width="match_parent"
		        android:layout_height="140dp"
		        android:orientation="horizontal" >
		        <TextView
		            android:id="@+id/textView3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"
		            android:layout_centerVertical="true"
		            android:layout_marginTop="-6dp"
		            android:fontFamily="open-sans"
		            android:text="SENHA"
		            android:layout_below="@+id/tvQtdGlobal"
		            android:textColor="#666666"
		            android:textSize="12pt"
		            android:textStyle="bold" />
		        
		
		        <TextView
		            android:id="@+id/tvFecharRecuperacao"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_marginRight="10dp"
		            android:clickable="true"
		            android:onClick="tvFechar"
		            android:text="@string/fechar"
		            android:textColor="#000000"
		            android:textSize="15pt"
		            android:textStyle="bold" />
		
		        <TextView
		            android:id="@+id/tvQtdGlobal"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentTop="true"
		            android:layout_centerHorizontal="true"
		            android:layout_marginTop="18dp"
		            android:fontFamily="open-sans"
		            android:text="RECUPERAR"
		            android:textColor="#666666"
		            android:textSize="12pt"
		            android:textStyle="bold" />
		
		        <TextView
		            android:id="@+id/tvTotalIndividualGas"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_below="@+id/textView3"
		            android:layout_centerHorizontal="true"
		            android:fontFamily="open-sans"
		            android:layout_marginTop="10dp"
		            android:text="VAMOS MANDAR UM EMAIL PARA VOCÃŠ"
		            android:textColor="#666666"
		            android:textSize="6pt"
		            android:textStyle="bold" />
		
		        <TextView
		            android:id="@+id/tvQtdGlobalFecharConta"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_below="@+id/tvTotalIndividualGas"
		            android:layout_centerHorizontal="true"
		            android:textColor="#666666"
		            android:textSize="6pt"
		            android:textStyle="bold"
		            android:fontFamily="open-sans"
		            android:text="ALTERAR SUA SENHA" />
		
		        <ImageView
		            android:id="@+id/imageView1"
		            android:layout_width="wrap_content"
		            android:layout_height="68dp"
		            android:layout_alignParentLeft="true"
		            android:layout_alignTop="@+id/tvQtdGlobal"
		            android:src="@drawable/gota" />
		
		    </RelativeLayout>
		        
		         <LinearLayout
		             android:layout_width="match_parent"
		             android:layout_height="wrap_content"
		             android:layout_marginTop="0dp"
		             android:layout_below="@+id/layoutHrConfirmar"   >
				    
		             	<View 
						   android:layout_width="match_parent"
						   android:layout_height="2dp"
						    
						   android:background="#A9A9A9"/>
		             
		             
		         </LinearLayout>
		         
		         
		 
		   
		
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:layout_below="@+id/layoutHrConfirmar" >
			    
			    
			    
			    	<EditText
			            android:id="@+id/etEmailR"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="10dp"
			            android:inputType="textEmailAddress"
			            android:hint="EMAIL"
			            android:padding="10dp" />
					
				<LinearLayout
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_horizontal" >
				
				</LinearLayout>		
				        
			     <LinearLayout
			        android:id="@+id/layout_Termos"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_alignParentBottom="true"
			        android:layout_marginTop="15dp" >
			
			        <Button
			            android:id="@+id/btConfirmar_Termos"
			            android:layout_width="match_parent"
			            android:layout_height="55dp"
			            android:background="@drawable/bt_recuperar_senha"
			            android:clickable="true"
			            android:fontFamily="open-sans"
			            android:text="ENVIAR"
			            android:textColor="#FFFFFF"
			            android:textSize="10pt"
			            android:textStyle="bold" />
			
			     </LinearLayout>
			    
			 
			</LinearLayout>
		
		</RelativeLayout>
	
        
    </LinearLayout>

</ScrollView>