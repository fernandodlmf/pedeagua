<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

  
        	
             <TextView
                 android:id="@+id/tvProdutoFechar"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:fontFamily="open-sans"
                 android:paddingBottom="4dp"
                 android:paddingLeft="5dp"
                 android:paddingTop="4dp"
                 android:text="Sublime"
                 android:textColor="#666666"
                 android:textSize="9.25pt" />
            
            <TextView
                android:id="@+id/tvQtdIndividualFechar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btDelProdutofecharCompra"
                android:fontFamily="open-sans"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:text="0"
                android:textColor="#666666"
                android:textSize="11pt" />

            <Button
                android:id="@+id/btDelProdutofecharCompra"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="33dp"
                android:layout_height="32dp"
                android:layout_marginRight="7dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/btn_produto_menos"/>

            <TextView
                android:id="@+id/tvTotalIndividualFechar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/textView9"
                android:background="@drawable/fundo_total_individual"
                android:fontFamily="open-sans"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="R$ 00,00"
                android:textColor="#666666"
                android:textSize="9pt" />
            
 
    
    
    
    
    
    
    
   <LinearLayout
        android:id="@+id/layout_fecharCompra_produtos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/Linear2" >
        
         <LinearLayout
             android:id="@+id/layout_Total"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="15dp"
             android:orientation="vertical" >
		    
             	<View 
				   android:layout_width="match_parent"
				   android:layout_height="0.5dp"			    
				   android:background="#A9A9A9"/>
             	
             	
             
         </LinearLayout>
         
         
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/layout_Total"
             android:orientation="vertical"  >
		    
             	<View 
				   android:layout_width="match_parent"
				   android:layout_height="0.5dp"			    
				   android:background="#A9A9A9"/>
             	
             	
             	             
         </LinearLayout>
         
         
         
         
         
         
 
   

	
		        
	   
	     
	     </LinearLayout>
    
    
    
    
    <LinearLayout
        android:id="@+id/Linear2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

    </LinearLayout>
    
    

</RelativeLayout>
